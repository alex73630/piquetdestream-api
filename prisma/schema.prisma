// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Donation {
  id        Int     @id @default(autoincrement())
  amount    Int
  createdAt BigInt
  name      String?
  message   String?
}

model DiscordBotMessages {
  id        Int    @id @default(autoincrement())
  createdAt BigInt
  name      String
  message   String
}
